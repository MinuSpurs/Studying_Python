----------------------------------------------------------------------------------------------
age=int(input('나이 : '))
if age<20:
    print('미성년자는 주류를 구매할 수 없습니다.')
    print('{}년 후에 성인이 되면 오세요!'.format(20-age))
----------------------------------------------------------------------------------------------
price=int(input('가격 : '))
if price<50000:
    print('배송비 2500원이 추가됩니다. 총 가격은 {}입니다.'.format(price+2500))
----------------------------------------------------------------------------------------------
day=input('주중 또는 주말입력 : ')

if day =='주중':
    print('아침 7시입니다!')
if day =='주말':
    print('아침 10시입니다!')
----------------------------------------------------------------------------------------------
day=int(input('며칠 : '))

if day%2==0:
    print('짝수번호 차량만 가능')
else:
    print('홀수번호 차량만 가능')
----------------------------------------------------------------------------------------------
age=int(input('나이 : '))

if age<20:
    print('입장료는 6000원 입니다.')
    price=6000
else:
    print('입장료는 15000원 입니다.')
    price=15000
    
money = int(input('투입한 금액 : '))
if money>price:
    print('거스름돈은 {}입니다.'.format(money-price))
elif money==price:
    print('가격이 정확합니다.')
else:
    print('{}원이 모자랍니다.'.format(price-money))
----------------------------------------------------------------------------------------------
price=int(input('구매금액 : '))

if price<20000:
    print('주문 금액이 부족합니다.')
elif price<50000:
    print('배송비 2500 추가')
    price+=2500
else:
    print('무료배송')

print('총 주문 금액 : {}'.format(price))
----------------------------------------------------------------------------------------------
date=int(input('날짜 입력 : '))

if date<=31:
    if date%2==0:
        print('짝수차량 가능')
    else:
        print('홀수 차량 가능')
else:
    print('날짜 오류')
----------------------------------------------------------------------------------------------
price=int(input('구매금액 : '))
market=input('동의(Y/N)? ')

if price>=100000:
    if market=='Y':
        print('사은품 지급 대상')
    else:
        print('사은품 지급 대상 아님')
else:
    print('사은품 지급 대상 아님')
----------------------------------------------------------------------------------------------
price=int(input('구매금액 : '))
market=input('동의(Y/N)? ')

if price>=100000 or market=='Y':
    print('무료 주차 대상')
else:
    print('무료주차 대상 아님')
----------------------------------------------------------------------------------------------
cough=input('기침 있음?(Y/N) ')
temp=float(input('체온 : '))

if cough=='Y' and temp>=38.5:
    print('독감일 수 있음')
else:
    print('독감 아님')
----------------------------------------------------------------------------------------------
menu=input('메뉴 입력: ')

if menu=='김밥':
    print('야채김밥(2500), 참치김밥(3500)')
elif menu=='라면':
    print('기본라면, 떡라면, 만두라면')
else:
    print('올바른 메뉴 입력')
----------------------------------------------------------------------------------------------
score=int(input('점수 입력 : '))

if score>100 or score<0:
    print('다시 입력')
elif score>=80:
    print('A')
elif score>40:
    print('B')
elif score>0:
    print('C')
----------------------------------------------------------------------------------------------
